{
  "name": "tdeekens",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.6.11",
  "scripts": {
    "dev": "(export PATH=$(npm bin):$PATH; trap 'jobs -pr | xargs kill' EXIT; TAILWIND_MODE=watch postcss ./styles/tailwind.css -o ./styles/globals.css --watch </dev/zero & next dev)",
    "build": "next build",
    "format": "prettier --write '**/*.{js, ts, tsx}'",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "css:dev": "TAILWIND_MODE=watch postcss ./styles/tailwind.css -o ./styles/globals.css --watch",
    "css:build": "postcss ./styles/tailwind.css -o ./styles/globals.css",
    "prepare": "husky install"
  },
  "dependencies": {
    "@u-wave/react-youtube": "^0.7.4",
    "gray-matter": "4.0.3",
    "next": "13.4.19",
    "next-mdx-remote": "4.4.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remark-gfm": "4.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "9.3.3",
    "@testing-library/jest-dom": "6.1.3",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.5.1",
    "@types/react": "18.2.22",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "@typescript-eslint/parser": "6.7.2",
    "autoprefixer": "10.4.15",
    "babel-jest": "29.7.0",
    "eslint": "^8.49.0",
    "eslint-config-next": "13.4.19",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-dom": "4.0.0",
    "lint-staged": "14.0.1",
    "node-mocks-http": "1.13.0",
    "postcss": "8.4.30",
    "postcss-cli": "10.1.0",
    "prettier": "3.0.3",
    "tailwindcss": "3.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.4.4",
    "tsc-files": "1.1.4",
    "typescript": "5.2.2"
  }
}
