{
  "name": "tdeekens",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.9.0",
  "scripts": {
    "dev": "(export PATH=$(npm bin):$PATH; trap 'jobs -pr | xargs kill' EXIT; TAILWIND_MODE=watch postcss ./styles/tailwind.css -o ./styles/globals.css --watch </dev/zero & next dev)",
    "build": "next build",
    "format": "prettier --write '**/*.{js, ts, tsx}'",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "css:dev": "TAILWIND_MODE=watch postcss ./styles/tailwind.css -o ./styles/globals.css --watch",
    "css:build": "postcss ./styles/tailwind.css -o ./styles/globals.css",
    "prepare": "husky"
  },
  "dependencies": {
    "@u-wave/react-youtube": "^0.7.4",
    "@vercel/speed-insights": "1.0.12",
    "gray-matter": "4.0.3",
    "next": "14.2.7",
    "next-mdx-remote": "5.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "remark-gfm": "4.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.5.0",
    "@testing-library/react": "16.0.1",
    "@testing-library/user-event": "14.5.2",
    "@types/react": "18.3.5",
    "@typescript-eslint/eslint-plugin": "8.3.0",
    "@typescript-eslint/parser": "6.7.2",
    "autoprefixer": "10.4.20",
    "babel-jest": "29.7.0",
    "eslint": "8.49.0",
    "eslint-config-next": "14.2.7",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "husky": "9.1.5",
    "jest": "29.7.0",
    "jest-dom": "4.0.0",
    "lint-staged": "15.2.9",
    "node-mocks-http": "1.15.1",
    "postcss": "8.4.41",
    "postcss-cli": "11.0.0",
    "prettier": "3.3.3",
    "tailwindcss": "3.4.10",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "tsc-files": "1.1.4",
    "typescript": "5.5.4"
  }
}
